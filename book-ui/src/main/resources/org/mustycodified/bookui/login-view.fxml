<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<VBox spacing="10" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.mustycodified.bookui.controller.LoginController"
      alignment="CENTER" style="-fx-padding: 20;">

    <HBox alignment="CENTER">
        <Label text="Email:"/>
        <TextField fx:id="emailField" promptText="Enter Email"/>
    </HBox>

    <HBox alignment="CENTER">
        <Label text="Password:"/>
        <TextField fx:id="passwordField" promptText="Enter Password"/>
    </HBox>

    <Button fx:id="loginButton" text="Login" onAction="#loginUser"/>
</VBox>
