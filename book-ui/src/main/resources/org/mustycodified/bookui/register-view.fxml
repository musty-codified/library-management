<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<VBox spacing="10" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.mustycodified.bookui.controller.UserController"
      alignment="CENTER" style="-fx-padding: 20;">
    <HBox alignment="CENTER">
        <Label text="First Name:"/>
        <TextField fx:id="firstNameField" promptText="Enter First Name"/>
    </HBox >

    <HBox alignment="CENTER">
        <Label text="Last Name:"/>
        <TextField fx:id="lastNameField" promptText="Enter Last Name"/>
    </HBox>

    <HBox alignment="CENTER">
        <Label text="Email:"/>
        <TextField fx:id="emailField" promptText="Enter Email"/>
    </HBox>

    <HBox alignment="CENTER">
        <Label text="Password:"/>
        <TextField fx:id="passwordField" promptText="Enter Password"/>
    </HBox>

    <HBox alignment="CENTER">
        <Label text="Phone:"/>
        <TextField fx:id="phoneNumberField" promptText="Enter Phone"/>
    </HBox>

    <Button fx:id="registerButton" text="Register" onAction="#registerUser"/>

</VBox>

