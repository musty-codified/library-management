<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.mustycodified.bookui.controller.BookController"
      spacing="20" alignment="CENTER" style="-fx-padding: 20;">

    <Label text="Library Books" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <TextField fx:id="searchField" promptText="Search by Title or Author" style="-fx-padding: 5;"/>
    <HBox spacing="10.0" alignment="CENTER">
        <Button fx:id="searchButton" text="Search" onAction="#searchBooks" style="-fx-padding: 5;"/>
        <Button fx:id="prevButton" text="Previous" onAction="#previousPage" style="-fx-padding: 5;"/>
        <Label fx:id="pageLabel" text="Page 1" />
        <Button fx:id="nextButton" text="Next" onAction="#nextPage" style="-fx-padding: 5;"/>
    </HBox>

    <TableView fx:id="bookTable" prefHeight="400" prefWidth="600">
        <columns>
            <TableColumn text="Title" fx:id="titleColumn"/>
            <TableColumn text="Author" fx:id="authorColumn"/>
            <TableColumn text="Quantity" fx:id="quantityColumn"/>
            <TableColumn text="ISBN" fx:id="isbnColumn"/>
            <TableColumn text="Published Date" fx:id="publishedDateColumn"/>
        </columns>
    </TableView>

    <!-- Form Fields -->
    <VBox spacing="10" style="-fx-padding: 10; -fx-border-color: lightgray; -fx-border-radius: 5;">
        <TextField fx:id="titleField" promptText=" Enter Title"/>
        <TextField fx:id="authorField" promptText="Enter Author"/>
        <TextField fx:id="quantityField" promptText="Enter Quantity"/>
        <TextField fx:id="isbnField" promptText="Enter ISBN"/>
        <TextField fx:id="priceField" promptText="Enter Price"/>
    </VBox>

    <!-- Action Buttons -->
    <HBox spacing="10">
        <Button fx:id="addButton" text="Add" onAction="#addBook" style="-fx-padding: 5;"/>
        <Button fx:id="updateButton" text="Update" onAction="#updateBook" style="-fx-padding: 5;"/>
        <Button fx:id="deleteButton" text="Delete" onAction="#deleteBook" style="-fx-padding: 5;"/>
        <Button fx:id="refreshButton" text="Refresh" onAction="#loadBooks" style="-fx-padding: 5;"/>

    </HBox>

</VBox>